<style>
	section {
		border-block-end: var(--accent) solid 2px;
		padding-block: 2rem;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	section:first-of-type {
		padding-block-start: 0;
	}

	section:last-of-type {
		border-block-end: none;
		padding-block-end: 0;
	}

	.sub-title {
		font-size: 1.5rem;
		font-weight: 500;
	}

	/* Intro */

	.intro-container {
		justify-content: center;
	}

	.profile-image {
		margin: auto;
		border-radius: 50%;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
		transition: box-shadow 0.3s ease;
		object-fit: cover;
		display: block;
		width: 16rem;
		height: 16rem;
	}

	.profile-image:hover {
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
	}

	.highlights-container {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.highlights-list {
		list-style-type: none;
	}

	.highlights-list-item {
		position: relative;
		margin-block-end: 1.5rem;
		padding-left: 1rem;
	}

	.highlights-list-item:last-child {
		margin-block-end: 0;
	}

	.highlights-container ul li::before {
		content: "â€¢";
		font-size: 1.2rem;
		position: absolute;
		left: 0;
		top: -2px;
	}

	/* Talks */

	lite-youtube {
		margin: auto;
		max-width: 560px;
		width: 100%;
		border-radius: 15px;
	}

	/* Experience */
	.experience-list {
		position: relative;
		padding: 0;
		margin-inline-start: 0.5rem;
		border-inline-start: var(--accent) 2px solid;
		list-style-type: none;
	}

	.experience-list-item {
		padding-inline-start: 1rem;
		margin-block-end: 2rem;
		display: grid;
		grid-template-columns: 1fr;
		gap: 1rem;
		position: relative;
	}

	.experience-list-item:last-child {
		margin-block-end: 0;
	}

	/* Timeline Bubble */
	.experience-list-item::before {
		content: "";
		position: absolute;
		left: -0.6rem;
		top: 0rem;
		height: 1rem;
		width: 1rem;
		border-radius: 50%;
		border: 1px solid var(--accent);
		background-color: var(--accent);
	}

	.experience-list-item-title {
		grid-row: 2;
		color: var(--text-primary);
		margin: 0;
		font-size: 1.2rem;
	}

	.experience-list-item-date {
		grid-row: 1;
		color: var(--text-secondary);
		font-size: 1rem;
		margin: 0;
	}

	.experience-list-item-description {
		grid-row: 3;
		font-size: 1rem;
		line-height: 1.5;
		list-style-type: disc;
		list-style-position: outside;
		padding: 0;
	}

	.experience-list-item-description-item {
		margin-inline-start: 1rem;
		margin-block-end: 0.5rem;
		position: relative;
	}

	.experience-list-item-description-item:last-child {
		margin-block-end: 0;
	}

	/* Responsive */
	/* Small */
	@media (min-width: 640px) {
		.intro-container {
			display: flex;
			flex-direction: row;
		}
	}

	/* Medium */
	@media (min-width: 768px) {
	}

	/* Large */
	@media (min-width: 1024px) {
	}
</style>

