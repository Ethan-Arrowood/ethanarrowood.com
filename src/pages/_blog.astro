---
import BaseLayout from "../layouts/BaseLayout.astro";

const allPosts = Object.values(
	import.meta.glob("./blog/*.md", { eager: true }),
);
---

<BaseLayout>
	<h2>Blog Posts</h2>
	<ul>
		{
			allPosts.map((post: any) => (
				<li>
					<a href={post.url}>{post.frontmatter.title}</a>
				</li>
			))
		}
	</ul>
</BaseLayout>
