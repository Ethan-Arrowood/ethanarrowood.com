---
import { Image } from "astro:assets";
import githubLogo from "../images/logos/github-dark.png";
---

<style is:global>
	:root {
		--background: #f5f5f1;
		--accent: #2d8b72;
		--text-primary: #1a1a1a;
		--text-secondary: #666666;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
</style>

<style>
	body {
		font-family: sans-serif;
		min-height: 100vh;
		background-color: var(--background);
		font-size: 16px;
		display: flex;
		flex-direction: column;
	}

	header {
		margin: auto;
		width: 100%;
		padding: 2rem 1rem;
		display: flex;
		flex-direction: column;
		align-items: start;
		gap: 2rem;
		border-block-end: var(--accent) solid 2px;
	}

	nav {
		display: flex;
		flex-direction: row;
		gap: 1rem;
	}

	.title {
		display: block;
		font-size: 2rem;
		font-weight: 500;
		color: var(--accent);
	}

	.tagline {
		font-size: 1rem;
		font-weight: 500;
		font-style: italic;
		color: var(--text-secondary);
	}

	nav > a {
		color: var(--text-primary);
		text-decoration: none;
	}

	nav > a:hover {
		color: var(--accent);
	}

	nav > a.disabled {
		color: var(--text-secondary);
		cursor: default;
	}

	nav > a.disabled:hover {
		color: var(--text-secondary);
	}

	main {
		margin: auto;
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	footer {
		margin: auto;
		width: 100%;
		padding: 2rem 1rem;
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
		border-block-start: var(--accent) solid 2px;
	}

	footer > a > img {
		width: 1.5rem;
		height: 1.5rem;
		aspect-ratio: 1/1;
	}

	footer p {
		align-items: center;
		display: inline-flex;
	}

	footer p svg {
		margin-inline: 0.25rem;
		display: inline-block;
		width: 1.25rem;
		height: 1.25rem;
	}

	/* Small */
	@media (min-width: 640px) {
		header,
		main,
		footer {
			width: 640px;
		}

		header {
			flex-direction: row;
			justify-content: space-between;
			align-items: center;
		}
	}

	/* Medium */
	@media (min-width: 768px) {
		header,
		main,
		footer {
			width: 768px;
		}
	}

	/* Large */
	@media (min-width: 1024px) {
		header,
		main,
		footer {
			width: 1024px;
		}
	}
</style>

